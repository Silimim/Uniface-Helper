{
	"name": "uniface",
	"displayName": "Uniface Helper",
	"description": "Uniface lenguage helper",
	"version": "1.3.0",
	"publisher": "Simone Baptiste",
	"icon": "./resources/uniface-extension-logo.png",
	"readme": "./README.md",
	"author": {
		"name": "Simone Baptiste",
		"email": "baptistesimone19@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Silimim/UnifaceHighlight"
	},
	"engines": {
		"vscode": "^1.19.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "uniface",
				"aliases": [
					"Uniface",
					"uniface"
				],
				"extensions": [
					".uni"
				],
				"icon": {
					"light": "./resources/uniface-icon-logo.png",
					"dark": "./resources/uniface-icon-logo.png"
				},
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "uniface",
				"scopeName": "source.uniface",
				"path": "./syntaxes/uniface.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "uniface",
				"path": "./snippets/snippets-functions.json"
			},
			{
				"language": "uniface",
				"path": "./snippets/snippets-statements.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerUniface.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerUniface.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.18.34",
		"@typescript-eslint/eslint-plugin": "^5.54.0",
		"@typescript-eslint/parser": "^5.54.0",
		"eslint": "^8.35.0",
		"mocha": "^9.2.1",
		"typescript": "^5.1.3"
	}
}
