{
    "name": "uniface",
    "displayName": "Uniface",
    "description": "Uniface syntax highlighting",
    "version": "1.0.0",
    "publisher": "Simone Baptiste",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "uniface",
            "aliases": ["Uniface", "uniface"],
            "extensions": [".uni"],
            "icon": {
                "light": "./resources/uniface-icon-logo.png",
                "dark": "./resources/uniface-icon-logo.png"
            },
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "uniface",
            "scopeName": "source.uniface",
            "path": "./syntaxes/uniface.tmLanguage.json"
        }],
        "snippets": [
            {
                "language": "uniface",
                "path": "./snippets/snippets-functions.json"
            },
            {
                "language": "uniface",
                "path": "./snippets/snippets-statements.json"
            }
        ]
    }
}